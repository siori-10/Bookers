<h1>Books</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  </thead>

<% if @book.errors.any? %>
 <%= @book.errors.count %> errors prohibited this book from being saved:
 <ul>
   <%= @book.errors.full_messages.each do|message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
 <% end %>

    <% @books.each do |books| %>

  <tbody>

    <tr>
      <td>
        <span><%= books.title %></span>
      </td>
      <td>
        <span><%= books.body %></span>
      </td>




      <td>
      <%= link_to "show","/books/#{books.id}" %>
      </td>

      <td>
      <%= link_to "Edit",edit_book_path(books.id) %>
      </td>

      <td>
        <%= link_to "Destroy",destroy_book_path(books.id), method: :delete,"data-confirm" =>"Are you sure?" %>

      </td>
      </tr>



 <% end %>

  </tbody>

</table>


<h2>New book</h2>
<%= form_with model: Book.new  do |f| %>
<P>Title</P>
<%= f.text_field :title %>


<p>Body</p>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>
